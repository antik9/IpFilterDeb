#!/usr/bin/python3

import numpy as np
import sys

from pylab import axis, scatter, show

xs, ys, clusters = [], [], []

for line in sys.stdin:
    x, y, cluster = line.split(';')
    xs.append(float(x))
    ys.append(float(y))
    clusters.append(int(cluster))

xs = np.array(xs)
ys = np.array(ys)
clusters = np.array(clusters)

cluster_info = []

for i in range(max(clusters)):
    cluster = i + 1
    mask = (clusters == cluster)
    cluster_xs = xs[mask]
    cluster_ys = ys[mask]
    cluster_info.append([cluster_xs.mean(), cluster_ys.mean(), sum(mask)])

xs = [cluster[0] for cluster in cluster_info]
ys = [cluster[1] for cluster in cluster_info]
area = [cluster[2] * 10 for cluster in cluster_info]
color = range(2, 2 + max(clusters))

sct = scatter(xs, ys, c=color, s=area, linewidths=2, edgecolor='w')
sct.set_alpha(0.75)

axis([min(xs) - 10, max(xs) + 10, min(ys) - 10, max(ys) + 10])
show()
