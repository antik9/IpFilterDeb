#!/usr/bin/python3

import numpy as np
import sys

from pylab import axis, scatter, show

xs, ys, clusters = [], [], []

for line in sys.stdin:
    x, y, cluster = line.split(';')
    xs.append(float(x))
    ys.append(float(y))
    clusters.append(int(cluster))

xs = np.array(xs)
ys = np.array(ys)
clusters = np.array(clusters)

cluster_info = []

for i in range(max(clusters)):
    cluster = i + 1
    mask = (clusters == cluster)

area = 15**2

sct = scatter(xs, ys, c=clusters, s=area, linewidths=5, edgecolor='w')
sct.set_alpha(0.75)

axis([min(xs) - 10, max(xs) + 10, min(ys) - 10, max(ys) + 10])
show()
